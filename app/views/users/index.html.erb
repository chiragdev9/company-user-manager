<div class="card">
  <h2 class="card-header">Users</h2>
    <div class="table-responsive">
      <table class="table table-sm table-striped">
        <thead class="table-dark">
          <tr>
            <th>Email</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Company</th>
            <th>Role</th>
            <th>Start date</th>
            <th>End date</th>
            <th>Monthly charge</th>
            <th>Image</th>
            <th>Active</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.company_id %></td>
              <td><%= user.role_id %></td>
              <td><%= user.start_date %></td>
              <td><%= user.end_date %></td>
              <td><%= user.monthly_charge %></td>
              <td><%= user.image_id %></td>
              <td><%= user.active %></td>
              <td><%= link_to 'Show', user, class:"btn btn-sm btn-dark" %></td>
              <td><%#= link_to 'Edit', edit_user_path(user), class:"btn btn-sm btn-dark" %></td>
              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-sm btn-danger"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
</div>
<br>
<div class="container">
  <div class="row">
    <div class="col">
      <%= link_to 'New User', new_user_path, class:"btn btn-dark" %>
    </div>
  </div>
</div>