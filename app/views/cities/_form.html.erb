<%= form_with(model: city) do |form| %>
<% if city.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(city.errors.count, "error") %> prohibited this city from being saved:</h2>

    <ul>
        <% city.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
</div>

<div class="field">
    <%= form.label :state_id %>
    <% states_array = State.all.map { |state| [state.name, state.id] } %>
    <%= form.select :state_id ,options_for_select(states_array),prompt:"Select State" %>
    <%#= form.text_field :state_id %>
</div>

<div class="field">
    <%= form.label :country_id %>
    <% countries_array = Country.all.map { |country| [country.name, country.id] } %>
    <%= form.select :country_id ,options_for_select(countries_array),prompt:"Select Country" %>
    <%#= form.text_field :country_id %>
</div>

<div class="actions">
    <%= form.submit %>
</div>
<% end %>