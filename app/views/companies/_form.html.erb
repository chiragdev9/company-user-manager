<%= form_with(model: company) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
        <% company.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <div class="card-body">
          <div class="field form-group">
              <%= form.label :name %>
              <%= form.text_field :name ,class:"form-control"%>
          </div>

          <div class="field form-group">
            <%= form.label :country_id %>
            <%= form.number_field :country_id ,class:"form-control" %>
          </div>

          <div class="field form-group">
            <%= form.label :state_id %>
            <%= form.number_field :state_id ,class:"form-control" %>
          </div>

          <div class="field form-group">
            <%= form.label :city_id %>
            <%= form.number_field :city_id ,class:"form-control" %>
          </div>

          <div class="field form-group">
            <%= form.label :postcode %>
            <%= form.text_field :postcode ,class:"form-control" %>
          </div>
          <br/>
          <div class="field form-group">
            <%= form.label :start_date %>
            <%= form.datetime_select :start_date  %>
          </div>

          <div class="field form-group">
            <%= form.label :active %>
            <%= form.check_box :active  %>
          </div>

          <div class="actions">
            <%= form.submit class:'btn btn-dark'%>
          </div>

      </div>
    </div>
  </div>    
<% end %>
