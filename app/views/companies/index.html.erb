<div class="card">
  <h2 class="card-header">Companies</h2>
    <div class="table-responsive">
    <table class="table table-sm table-striped">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Country</th>
          <th>State</th>
          <th>City</th>
          <th>Postcode</th>
          <th>Start date</th>
          <th>Active</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody >
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.country_id %></td>
            <td><%= company.state_id %></td>
            <td><%= company.city_id %></td>
            <td><%= company.postcode %></td>
            <td><%= company.start_date %></td>
            <td><%= company.active %></td>
            <td><%= link_to 'Show', company, class:"btn btn-sm btn-dark" %></td>
            <td><%= link_to 'Edit', edit_company_path(company) ,class:"btn btn-sm btn-dark"%></td>
            <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-sm btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br/>
<div class="container">
  <div class="row">
    <div class="col">
      <%= link_to 'New Company', new_company_path, class:"btn btn-dark" %>
    </div>
  </div>
</div>