<p id="notice"><%= notice %></p>

<div class="card">
    <h2 class="card-header">Countries</h2>
    <div class="table-responsive">
        <table class="table table-sm table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Country name</th>
                    <th colspan="3"></th>
                </tr>
            </thead>

            <tbody>
                <% @countries.each do |country| %>
                <tr>
                    <td><%= country.country_name %></td>
                    <td><%= link_to 'Show', country %></td>
                    <td><%= link_to 'Edit', edit_country_path(country) %></td>
                    <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<br>
<div class="container">
    <div class="row">
        <div class="col">
            <%= link_to 'New Country', new_country_path,class:"btn btn-dark" %>
        </div>
    </div>
</div>